import React, { Component } from "react";
import SpecificProduct from './SpecificProduct';
import { BrowserRouter, Route, Link, Redirect } from "react-router-dom";




class Products extends Component {
  constructor(props) {
    super(props);
  }
  
  redirect(){
    return(
    <Redirect from='/' to={`/product/${this.props.product.id}`}/>
    )
  }

  render() {
    
    return (
      <div className="col-md-3 col-sm-6">
        <div id={this.props.product.id} className="card" style={{width: "15rem;" }}>
          <img src={this.props.product.imgLink} className="card-img-top" alt="..." />
          <div className="card-body">
            <h5 className="card-title">{this.props.product.title}</h5>
            <p className="card-text">
              {this.props.product.info}
            </p>
            <p className="card-text">
              Price : {this.props.product.price} $
            </p>
            <Link to={`/product/${this.props.product.id}`}>
            <button onClick={this.redirect()}>details</button>
            </Link>
           
          </div>
        </div>
      </div>
    );
  }
}

export default Products;
